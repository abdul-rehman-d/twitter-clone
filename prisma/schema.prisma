generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  relationMode      = "prisma"
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String   @db.VarChar(255)
  authorId  String

  likes     Like[]

  @@index([authorId])
}

model Like {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())

  likedBy   String

  postId    String
  post      Post      @relation(fields: [postId], references: [id])

  @@index([likedBy])
  @@index([postId])
}
