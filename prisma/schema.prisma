generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  relationMode      = "prisma"
}

model Post {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  content   String   @db.VarChar(255)
  authorId  String

  likes     Like[]
  retweets  Retweet[]

  @@index([authorId])
}

model Like {
  id        String    @id @default(cuid())
  createdAt DateTime  @default(now())

  likedBy   String

  postId    String?
  post      Post?      @relation(fields: [postId], references: [id])

  retweetId String?
  retweet   Retweet?   @relation(fields: [retweetId], references: [id])

  @@index([likedBy])
  @@index([retweetId])
  @@index([postId])
}

model Retweet {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())

  retweetedBy String

  postId      String?
  post        Post?      @relation(fields: [postId], references: [id])

  retweetId   String?
  retweet     Retweet?   @relation("RetweetForRetweet", fields: [retweetId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  retweets    Retweet[]  @relation("RetweetForRetweet")

  likes       Like[]

  @@index([retweetedBy])
  @@index([retweetId])
  @@index([postId])
}
